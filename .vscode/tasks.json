{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Script in root Directory ",
            "type": "shell",
            "command": "/home/pine/anaconda3/bin/conda",
            "args": [
                "run",
                "-n", "ai",
                "python",
                "-u",
                "${file}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Run Script in Directory nlp",
            "type": "shell",
            "command": "/home/pine/anaconda3/bin/conda",
            "args": [
                "run",
                "-n", "ai",
                "python",
                "-u",
                "${file}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/nlp"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}
